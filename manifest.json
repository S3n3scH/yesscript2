{
	"manifest_version": 2,
	"name": "YesScript2",
	"version": "1.0",

	"description": "Block scripts on specific sites",
	"homepage_url": "https://github.com/log69/yesscript2",
	"icons": {
		"48": "icons/icon.svg",
		"96": "icons/icon.svg"
	},

	"applications": {
	  "gecko": {
		"id": "yesscript2@example.org",
		"strict_min_version": "55.0"
	  }
	},

	"browser_action": {
		"default_icon": "icons/icon2.svg"
	},

	"permissions": [
		"activeTab",
		"storage",
		"webRequest",
		"webRequestBlocking",
		"<all_urls>"
	],

	"background": {
		"scripts": [
			"background.js"
		]
	}
}
